{
    "codeLens.enable": true,
    "diagnostic.virtualText": true,
    "git.virtualTextPrefix": "     ",
    "git.addGBlameToVirtualText": true,
    "git.enableGutters": true,
    "coc-swagger.enabled": true,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.colorSupport": true,
    "coc.preferences.snippets.enable": true,
    "coc.preferences.previewAutoClose": true,
    "coc.preferences.enableFloatHighlight": true,
    "coc.preferences.formatOnInsertLeave": true,
    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "eslint.enable": true,
    "eslint.filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "tsserver.enable": true,
    "typescript.format.semicolons": "remove",
    "typescript.updateImportsOnFileMove.enable": true,
    "typescript.showUnused": true,
    "typescript.preferences.quoteStyle": "single",
    "typescript.suggest.paths": true,
    "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
    "typescript.suggest.enabled": true,
    "typescript.suggestionActions.enabled": true,
    "typescript.suggest.autoImports": true,
    "rust-analyzer.lens.enable": true,
    "rust-analyzer.lens.run": true,
    "rust-analyzer.lens.implementations": true,
    "rust-analyzer.callInfo.full": true,
    "rust-analyzer.inlayHints.chainingHints": true,
    "json.format.enable": true,
    "python.pythonPath": "python3",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true,
                "completeUnimported": true
            }
        },
        "ccls": {
            "command": "ccls",
            "rootPatterns": [
                ".ccls",
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": ["c", "cpp", "cc", "h", "hpp"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        }
        // "vue": {
        //     "command": "vls",
        //     "args": [],
        //     "filetypes": [
        //         "vue"
        //     ],
        //     "ignoredRootPaths": [
        //         "~"
        //     ]

        // }

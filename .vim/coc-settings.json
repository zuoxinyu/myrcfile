{
    "codeLens.enable": true,
    "rust.all_features": true,
    "rust-client.rlsPath": "rls",
    "rust-client.rustupPath": "rustup",
    "rust.unstable_features": true,
    "rust.show_hover_context": true,
    "rust.show_warnings": true,
    "tsserver.enable": true,
    "json.format.enable": true,
    "languageserver": {
        "golang": {
            "command": "gopls",
            //"cwd": "~/go/src/go.megvii-inc.com/securitycore/videod",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        },
        "ccls": {
            "command": "ccls",
            "rootPatterns": [
                ".ccls",
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": ["c", "cpp", "cc", "h", "hpp"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        },
        "cquery": {
            "command": "cquery",
            "args": [
                "--log-file=/tmp/cq.log"
            ],
            "filetypes": [
                "c",
                "cpp"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cacheDirectory": "/tmp/cquery",
                "highlight": {
                    "enabled": true
                },
                "emitInactiveRegions": true
            }
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "vue": {
            "command": "vls",
            "args": [],
            "filetypes": [
                "vue"
            ],
            "ignoredRootPaths": [
                "~"
            ]

        }
        //"efm": {
        //    "command": "efm-langserver",
        //    "args": [],
        //    // "args": ["-c", "/path/to/your/config.yaml"],
        //    "filetypes": [
        //        "vim",
        //        "eruby",
        //        "markdown"
        //    ]
        //}
    }
}

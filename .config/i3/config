bindsym $mod+Ctrl+a --release exec flameshot gui

bindsym Print --release exec "scrot -s /tmp/screenshot-$(date +%F_%T).png -e 'xclip -selection c -t image/png < $f'";exec notify-send 'screenshot saved'
bindsym Shift+Print exec "scrot /tmp/screenshot-$(date +%F_%T).png -e 'xclip -selection c -t image/png < $f'";exec notify-send 'screenshot saved'


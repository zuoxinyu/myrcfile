include-file = ~/.config/polybar/colors.ini
include-file = ~/.config/polybar/modules.ini

[variables]
mpadding = 1
margin = 3

[bar/main]
dpi=168
override-redirect = false
wm-restack = i3
monitor = ${env:MONITOR:DP-3}
monitor-fallback = ${env:MONITOR:eDP}
spacing = 3

bottom = false

height = 32
width = 100%
offset-x = 0
offset-y = 0
radius = 0.0

fixed-center = true

background = ${colors.xbg}
foreground = ${colors.xfg}

line-size = 4
line-color = #f00

dim-value = 1.0
;locale = zh_CN.UTF-8

separator=

border-top-size = 3
border-bottom-size = 3
border-left-size = 0
border-right-size = 0
border-color =${colors.xbg}

overline-size = 6
overline-color=${colors.xbs}
underline-size = 3
underline-color=${colors.xbs}

padding-left = 8
padding-right = 8

font-0 = "Noto Sans CJK SC:pixelsize=7:antialias=true;0"
font-1 = "Fira Code:pixelsize=7;0"
font-2 = "FuraCode Nerd Font Mono:pixelsize=10;0"

module-margin-left = 2
module-margin-right = 2
modules-left = i3 cloudmusic right
modules-center = left xwindow right
modules-right = left netspeed cpu memory line battery  eth xbacklight alsa headphone date

tray-position = right
tray-detached = false
tray-padding = 4
tray-background = ${colors.xbg}
; tray-offset-x = 660
; tray-offset-y = -2
tray-maxsize = 22
tray-scale = 1.0

enable-ipc = true

cursor-click = pointer
cursor-scroll = ns-resize

label-urgent-foreground = #000000
label-urgent-background = #bd2c40


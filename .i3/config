# i3 config file (v4)
set $mod Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font pango:monospace 8
font pango:Monaco for Powerline 8

# window title style
title_align center

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+q kill
bindsym $mod+Shift+r reload
bindsym $mod+Ctrl+r restart

# split mode
bindsym $mod+v split v
bindsym $mod+Shift+v split h

# printscreen--scrot(Print=PrtSc/PrintScreen)
bindsym $mod+Print exec scrot

# GUI file manager
bindsym $mod+Shift+e exec --no-startup-id thunar 
# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
# interactive mode
bindsym $mod+semicolon exec --no-startup-id i3-input

# volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -c 0 -q set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -c 0 -q set Master 2dB- unmute
bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle

# startup
exec i3-sensible-terminal

# background wallpaper
exec_always --no-startup-id $HOME/.fehbg

# polybar
exec_always --no-startup-id  $HOME/.config/polybar/launch.sh

# window transparent
exec_always --no-startup-id  xcompmgr

# window style
new_window pixel 0
new_float normal

default_border pixel 1

for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="Thunar"] floating enable
for_window [class="shadowsocks-qt5"] floating enable
# putting clients on specific workspaces
assign [class="Chromium"] 1
assign [class="code"] 3

# Hide borders
hide_edge_borders vertical
bindsym $mod+t border normal 0 
bindsym $mod+y border pixel 2
bindsym $mod+u border none
bindsym $mod+Shift+minus move scratchpad 
bindsym $mod+minus scratchpad show

# Theme colors
# class                   border  backgr. text    indic.   child_border
# client.focused            #556064 #556064 #80FFF9 #FDF6E3
# client.focused_inactive   #2F3D44 #2F3D44 #1ABC9C #454948
# client.unfocused          #2F3D44 #2F3D44 #1ABC9C #454948
# client.urgent             #CB4B16 #FDF6E3 #1ABC9C #268BD2
# client.placeholder        #000000 #0c0c0c #ffffff #000000


# window colors
#  class                 border   backgr.  text  indicator  child_border
client.focused          #4c7899  #285577  #ffffff  #2e9ef4   #285577
client.focused_inactive #81c2d6  #5f676a  #ffffff  #484e50   #0b6e48
client.unfocused        #c9cabb  #222222  #888888  #292d2e   #222222
client.urgent           #2f343a  #900000  #ffffff  #199475   #900000
client.placeholder      #a2b4ba  #0c0c0c  #ffffff  #1793d0   #0c0c0c
client.background       #82abba

popup_during_fullscreen smart
show_marks yes

# i3-gaps
gaps inner 8
gaps outer 0

# Smart gaps (gaps used if only more than one container on the workspace)
smart_gaps on

# Smart borders (draw borders around container only if it is not the only container on this workspace)
# on|no_gaps (on=always activate and no_gaps=only activate if the gap size to the edge of the screen is 0)
smart_borders on

# change focus
focus_follows_mouse no
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+p focus parent
bindsym $mod+c focus child

# move window
bindsym $mod+Righf move right 
bindsym $mod+Left  move left
bindsym $mod+Down  move down
bindsym $mod+Up    move up

# fullscreen
bindsym $mod+f fullscreen toggle

# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

bindsym $mod+Shift+1 move workspace 1
bindsym $mod+Shift+2 move workspace 2
bindsym $mod+Shift+3 move workspace 3
bindsym $mod+Shift+4 move workspace 4
bindsym $mod+Shift+5 move workspace 5
bindsym $mod+Shift+6 move workspace 6
bindsym $mod+Shift+7 move workspace 7
bindsym $mod+Shift+8 move workspace 8
bindsym $mod+Shift+9 move workspace 9
bindsym $mod+Shift+0 move workspace 10

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym $mod+h resize shrink width 10 px or 10 ppt
        bindsym $mod+j resize grow height 10 px or 10 ppt
        bindsym $mod+k resize shrink height 10 px or 10 ppt
        bindsym $mod+l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

